rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is whitelisted
    function isWhitelisted() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/whitelist/$(request.auth.token.email)) &&
             get(/databases/$(database)/documents/whitelist/$(request.auth.token.email)).data.active == true;
    }
    
    // Whitelist collection - only whitelisted admins can read/write
    match /whitelist/{email} {
      allow read, write: if isWhitelisted();
    }
    
    // Projects collection - only whitelisted admins can write, anyone can read
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isWhitelisted();
    }
    
    // Settings collection - only whitelisted admins can read/write
    match /settings/{settingId} {
      allow read, write: if isWhitelisted();
    }
  }
}
